{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "incremental": true,
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "outDir": "dist",
    "target": "ES2022",
    "strict": true,
    "rootDir": "src",
    "pretty": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": ["src"]
}